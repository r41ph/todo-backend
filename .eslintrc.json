{
  "extends": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": true,
        "printWidth": 80,
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "tabWidth": 2
      }
    ]
  },
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 6
  }
}
